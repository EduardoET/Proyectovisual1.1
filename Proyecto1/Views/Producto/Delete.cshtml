@model Producto 
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Confirmar el Borrado</h1>
<forn method="post" asp-action= "Delete">
    <input asp-for="Id" Type="hidden"/>
    <label>Nombre</label>
    <input asp-for="Nombre" />
    <br/>
    <label>Marca</label>
    <input asp-for="Marca" />
    <br/>
    <label>Precio</label>
    <input asp-for="Precio" />
    <br/>
    <label>Stock</label>
    <input asp-for="Stock" />
    <br/>
    <input type="submit" value="Borrar"/>
</forn>

