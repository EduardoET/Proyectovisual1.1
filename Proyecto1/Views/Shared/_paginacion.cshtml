@model Paginacion 

@{
    
    int cantidadPaginas = (int) Math.Ceiling( (double) Model.TotalDeRegistros / Model.RegistrosPorPagina);
}


<ul class= "pagination">
    @if (Model.PaginaActual == 1)
    {
        <li class ="disabled" hidden>@Html.ActionLink("Anterior", null, new {PaginaActual = 1})</li>
    } else
    {
        <li>@Html.ActionLink("Anterior", null, new {PaginaActual = Model.PaginaActual-1})</li>
    }
    <li>
        --
    </li>
    @if (Model.PaginaActual == cantidadPaginas)
    {
        <li class ="disabled" hidden>@Html.ActionLink("Siguiente", null, new {PaginaActual = cantidadPaginas})</li>
    } else
    {
        <li>@Html.ActionLink("Siguente", null, new {PaginaActual = Model.PaginaActual+1})</li>
    }
</ul>
