@model Paginacion
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}


<div class="row">
    <div class="col-sm-6">
<h1>Listado de Credito</h1>
</div>
    <div class="col-sm-6">
        <a class="btn btn-sucess d-block"
             asp-controller="Credito" asp-action="Create" style="background-color: blue" >Nuevo Credito</a>
 </div>
</div>
@using (Html.BeginForm(FormMethod.Get))
{
    <label>Tipo</label>
    <input type="text" name="Tipo" id="Tipo"/>
     <input type="submit" value="Filtrar" class="btn btn-sucess"/>
}

<table class="table table-bordered table-table-striped">
    <tr>
        <th>Id</th>
        <th>Tipo</th>
        <th>Fecha_Solicitud</th>
    </tr>
     @foreach(Credito credito in Model.entidades)
    {
        <tr>
            <td>@credito.Id</td>
            <td>@credito.Tipo</td>
            <td>@credito.Fecha_Solicitud</td>
             <td>
                <a asp-controller="Credito" asp-action="Edit" asp-route-id="@credito.Id">Editar</a>
                 <a asp-controller="Credito" asp-action="Delete" asp-route-id="@credito.Id">Borrar</a>
            </td>
            
        </tr>
        }
</table>

@{
    Html.RenderPartial("_paginacion", Model);
}